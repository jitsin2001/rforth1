	processor pic18f248
	radix dec
	org 0x2000
	goto init_runtime
	org 0x2008
	reset
	org 0x2018
	reset

;---------------------------------------------------------
; Section: constants
;---------------------------------------------------------

PREINC0 equ 0xfec

WREG equ 0xfe8

TMR0L equ 0xfd6

TMR1L equ 0xfce

RCREG equ 0xfae

b equ 0x200

;---------------------------------------------------------
; Section: code
;---------------------------------------------------------

init_runtime
	movlb 1
	clrf (a+1),1
	clrf a,1
	clrf (c__1+1),1
	clrf c__1,1

main
	call test1
	call test2
	call test3
	call test4
	call test5
	call test6
	call test7
	call test8
	call test9

test10
	movff a,c__1
	movff c__1,(c__1+1)
	return

test1
	clrf (a+1),1
	movlw 3
	movwf a,1
	return

test2
	setf (a+1),1
	clrf a,1
	return

test3
	movf RCREG,w,0
	movwf PREINC0,0
	clrf PREINC0,0
	movwf a,1
	return

test4
	movlw 0
	movff WREG,(b+1)
	movlw 3
	movff WREG,b
	return

test5
	movlw HIGH(0xff00)
	movff WREG,(b+1)
	movlw LOW(0xff00)
	movff WREG,b
	return

test6
	movf RCREG,w,0
	movwf PREINC0,0
	clrf PREINC0,0
	movff WREG,b
	return

test7
	movf TMR1L,w,0
	movff (TMR1L+1),(TMR0L+1)
	movwf TMR0L,0
	return

test8
	movff a,c__1
	clrf (c__1+1),1
	return

test9
	movf a,w,1
	movwf PREINC0,0
	clrf PREINC0,0
	movwf c__1,1
	clrf (c__1+1),1
	return

;---------------------------------------------------------
; Section: memory
;---------------------------------------------------------

a equ 0x100

c__1 equ 0x102

	END
