	processor pic18f248
	radix dec
	org 0x2000
	goto init_runtime
	org 0x2008
	reset
	org 0x2018
	reset

;---------------------------------------------------------
; Section: constants
;---------------------------------------------------------

TBLPTRU equ 0xff8

TBLPTRH equ 0xff7

TBLPTRL equ 0xff6

TABLAT equ 0xff5

INDF0 equ 0xfef

POSTINC0 equ 0xfee

POSTDEC0 equ 0xfed

PREINC0 equ 0xfec

PLUSW0 equ 0xfeb

FSR0H equ 0xfea

FSR0L equ 0xfe9

INDF1 equ 0xfe7

POSTINC1 equ 0xfe6

POSTDEC1 equ 0xfe5

PREINC1 equ 0xfe4

FSR1H equ 0xfe2

FSR1L equ 0xfe1

POSTINC2 equ 0xfde

POSTDEC2 equ 0xfdd

PREINC2 equ 0xfdc

FSR2H equ 0xfda

FSR2L equ 0xfd9

EEADR equ 0xfa9

EEDATA equ 0xfa8

EECON2 equ 0xfa7

EECON1 equ 0xfa6

PIR2 equ 0xfa1

;---------------------------------------------------------
; Section: code
;---------------------------------------------------------

init_runtime
	movlb 1
	clrf (a+1),1
	clrf a,1
	movlw 0x5f
	movwf FSR0L,0
	clrf FSR0H,0
	movlw 0xbf
	movwf FSR2L,0
	clrf FSR2H,0

main
	infsnz a,f
	incf (a+1),f
	call op_dup
	call op_fetch_tos
	movf POSTDEC0,w,0
	infsnz POSTINC0,f,0
	incf INDF0,f,0
	movff POSTDEC0,(temp_x1+1)
	movff POSTDEC0,temp_x1
	movff POSTDEC0,PREINC2
	movff POSTDEC0,PREINC2
	movff temp_x1,PREINC0
	movff (temp_x1+1),PREINC0
	movff POSTDEC2,PREINC0
	movff POSTDEC2,PREINC0

op_store
	btfsc INDF0,4,0
	goto eeprom_EX_
	movff POSTDEC0,FSR1H
	movff POSTDEC0,FSR1L
	movff POSTDEC0,PREINC1
	movf POSTDEC1,w,0
	movff POSTDEC0,INDF1
	return

flash_addr_EX_
	bcf INDF0,7,0
	bsf EECON1,7,0

table_addr_EX_
	clrf TBLPTRU,0
	movf INDF0,w,0
	clrf INDF0,0
	movwf PREINC0,0
	clrf PREINC0,0
	movf POSTDEC0,w,0
	movff POSTDEC0,TBLPTRH
	movf POSTDEC0,w,0
	movff POSTDEC0,TBLPTRL
	bcf EECON1,6,0
	return

eeprom_EX_
	movff POSTDEC0,PREINC2
	movff POSTDEC0,PREINC2
	movf INDF0,w,0
	clrf INDF0,0
	movwf PREINC0,0
	clrf PREINC0,0
	movff POSTDEC2,PREINC0
	movff POSTINC2,PREINC0
	movf POSTDEC0,w,0
	infsnz POSTINC0,f,0
	incf INDF0,f,0
	call eepromc_EX_
	movff POSTDEC2,PREINC0
	movff POSTDEC2,PREINC0

eepromc_EX_
	movf POSTDEC0,w,0
	movf POSTDEC0,w,0
	movwf EEADR,0
	bcf EECON1,7,0
	bcf EECON1,6,0
	movf POSTDEC0,w,0
	movff POSTDEC0,EEDATA
	bsf EECON1,2,0
	movlw 0x55
	movwf EECON2,0
	movlw 0xaa
	movwf EECON2,0
	bsf EECON1,1,0
_lbl___255
	btfsc EECON1,1,0
	bra _lbl___255
	bcf EECON1,2,0
	bcf PIR2,4,0
	return

op_dup
	movlw -1
	movff PLUSW0,PREINC0
	movff PLUSW0,PREINC0
	return

op_fetch_tos
	btfsc INDF0,7,0
	goto flash_AT_
	btfsc INDF0,4,0
	goto eeprom_AT_
	movff POSTDEC0,FSR1H
	movff POSTDEC0,FSR1L
	movff POSTINC1,PREINC0
	movff INDF1,PREINC0
	return

flash_AT_
	call flash_addr_EX_
	tblrd*+
	movff TABLAT,PREINC0
	clrf PREINC0,0
	tblrd*+
	movff TABLAT,INDF0
	return

eepromc_AT_
	movf POSTDEC0,w,0
	movf POSTDEC0,w,0
	movwf EEADR,0
	bcf EECON1,7,0
	bcf EECON1,6,0
	bsf EECON1,0,0
	movff EEDATA,PREINC0
	clrf PREINC0,0
	return

eeprom_AT_
	call op_dup
	call eepromc_AT_
	movff POSTDEC0,(temp_x1+1)
	movff POSTDEC0,temp_x1
	movff POSTDEC0,PREINC2
	movff POSTDEC0,PREINC2
	movff temp_x1,PREINC0
	movff (temp_x1+1),PREINC0
	movff POSTDEC2,PREINC0
	movff POSTDEC2,PREINC0
	movf POSTDEC0,w,0
	infsnz POSTINC0,f,0
	incf INDF0,f,0
	call eepromc_AT_
	movf POSTDEC0,w,0
	movf POSTDEC0,w,0
	movwf INDF0,0
	return

;---------------------------------------------------------
; Section: memory
;---------------------------------------------------------

temp_x1 equ 0x0

a equ 0x100

	END
